{
  // Required
  "manifest_version": 3,
  "name": "Macos buttons",
  "version": "1.0.0",

  // Recommended
  "description": "Customize the navigation buttons to give them a macOS button look.",
  "icons":{
    "16": "img/logo16.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "author": [{
    "name": "Clément Gaudinière",
    "email": "dev.clementgaudiniere@gmail.com"
  }],

  "action": {
    "default_icon": {
      "16": "img/logo16.png",
      "48": "img/logo48.png",
      "128": "img/logo128.png"
    },
    "default_title": "Click Me",
    "default_popup": "view.html"
  }

  // Pick one (or none)
  // "browser_action": {...},
  // "page_action": {...},

  // Optional
  // "action": ...,
  // "automation": ...,
  // "background": {
    // Recommended
    // "persistent": false
    // Optional
    //"service_worker": ...
  // }
}
